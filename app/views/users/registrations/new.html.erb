<div class="container">
  <div class="row">
   <div class="col-md-10 mx-auto">
    <h2 class="head-line title_h2">新規会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
       <%= render "devise/shared/error_messages", resource: resource %>

       <div class="field form-group col-xs-3">
        <%= f.label :"(姓)", class: "col align-self-center" %>
        <%= f.text_field :last_name, autofocus: true, placeholder: "山田", class: "col-3 form-control" %>
        <%= f.label :"(名)", class: "col-1 col-form-label" %>
        <%= f.text_field :first_name, autofocus: true, placeholder: "花子", class:"col-3 form-control" %>
       </div>

       <div class="field form-group col-xs-12">
        <%= f.label :"(セイ)", class: "col-1 col-form-label" %>
        <%= f.text_field :kana_last_name, autofocus: true, placeholder: "ヤマダ", class: "col-3 form-control" %>
        <%= f.label :"(メイ)", class: "col-1 col-form-label" %>
        <%= f.text_field :kana_first_name, autofocus: true, placeholder: "ハナコ", class: "col-3 form-control" %>
       </div>

        <div class="field form-group col-xs-12">
           <%= f.label :email %></br>
           <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email" , class: "col-3 form-control" %>
        </div>

        <div class="field form-group col-xs-12">
           <%= f.label :"電話番号(ハイフンなし)" %></br>
           <%= f.text_field :phone_number, autofocus: true, placeholder: "0957234569" , class: "col-3 form-control" %>
        </div>

        <div class="field form-group col-xs-12">
          <%= f.label :"パスワード(6文字以上)" %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "col-3 form-control" %>
        </div>

        <div class="field form-group col-xs-12">
          <%= f.label :"パスワード(確認用)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "col-3 form-control" %>
        </div>

        <p></p>

        <div class="actions">
          <input type="submit" name="commit" value="Sign up" class="btn btn-sm btn-success" data-disable-with="Sign up">
        </div>

      <% end %>
      <%= render "devise/shared/links" %>

      </div>
    </div>
 </div>