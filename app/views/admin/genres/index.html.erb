
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-7'>
      <h2 class="mt-3">ジャンル一覧・追加</h2>
        <%= form_with model: @genre,url: admin_genres_path, local:true do |f| %>
      <div class="form-group">
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name, class: 'form-control genre_name' %>
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
        <% end %>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %></td>
            <td></td>
          </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>