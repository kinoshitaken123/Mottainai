<div class ='container'>
 <h2 class="head-line title_h2 text-center">ジャンル一覧・追加</h2>
  <div class ='row justify-content-center mt-3'>
    <div class="col-md-10 page-title">
        <%= form_with model: @genre,url: admin_genres_path, local:true do |f| %>
          <div class = "form-group">
            <%= f.label :name, "ジャンル名" %>
            <%= f.text_field :name, class: 'form-control genre_name' %>
            <%= f.submit "新規登録", class: 'btn btn-success' %>
          </div>
        <% end %>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %></td>
            <td></td>
          </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>