<div class="container">
 <h2 class="head-line title_h2 text-center">注文履歴一覧</h2>
  <div calss="row">
   <div class="col-xs-12">
    <% if @orders.present? %>
     <table class="table table-hover table-bordered table-condensed">
      <thead class="table-secondary">
       <tr>
          <th>注文日</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
       </tr>
      </thead>
      <tbody>
       <% @orders.each do |order| %>
        <tr>
         <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
         <td>
             <%#= order.postcode %></br>
             <%#= order.address %></br>
             <%#= order.name %>
         </td>
         <td>
             <%# order.ordered_products.each do |ordered_product| %>
             <%#= ordered_product.product.name %><br>
             <%# end %>
         </td>
         <td><%#= order.total_price.to_s(:delimited) %>円</td>
         <td><%= order.status %></td>
         <td><%= link_to "表示する", public_orders_path(order), class:"btn btn-warning" %></td>
        </tr>
       <% end %>
      </tbody>
     </table>
    <% else %>
     <p>注文履歴がありません。</p>
    <% end %>
   </div>
  </div>
</div>