<div class="container">
<div class="row">
  <div class="col-md-6 offset-md-2">
    <h5 class="d-inline bg-gray pr-3 pl-3 page-title">商品詳細</h5>
  </div>
</div>
<div class="row mt-5 offset-md-2 page-title">
    <div class="col-md-5 text-center">
      <%= attachment_image_tag(@product, :image, :fill, 200, 200, fallback: "no-image-icon.jpg") %>
    </div>
      <div class="col-md-5 ml-5 text-left">
      <div class="row my-2">
        <div class="col">登録者/生産者</div>
          <div class="col"><%= @product.store %></div>
      </div>
      <div class="row my-2">
        <div class="col">商品名</div>
          <div class="col"><%= @product.name %></div>
        </div>
        <div class="row my-2">
          <div class="col">商品説明</div>
          <div class="col"><%= @product.description %></div>
        </div>
        <div class="row my-2">
          <div class="col">ジャンル</div>
          <div class="col"><%= @product.genre.name %></div>
        </div>
        <div class="row my-2">
          <div class="col ml-3">
            <div class="row">税込価格</div>
            <div class="row">(税抜価格)</div>
          </div>
          <div class="col my-auto pl-0"><%= @product_intax %> 円<br>(<%= @product.price %>) 円</div>
        </div>
        <div class="row my-2">
          <div class="col">販売ステータス</div>
          <div class="col"><%= @product.status ? '販売中' : '販売停止中' %></div>
        </div>
        <div class="row my-2">
          <%= link_to '編集する', edit_admin_product_path(@product), class: "btn btn-sm btn-success" %>
        </div>
    </div>
  </div>
</div>