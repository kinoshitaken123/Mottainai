<div class="container">
 <h2 class="head-line title_h2 text-center">チャット受信一覧</h2>
  <div calss="row">
   <div class="col-xs-12">
    <% if @chats.present? %>
     <table class="table table-hover table-bordered table-condensed">
      <thead class="table-secondary">
       <tr>
          <th>ユーザーID</th>
          <th>名前</th>
          <th>メッセージ詳細</th>
       </tr>
      </thead>
      <tbody>
      <% @chats.each do |chat| %>
       <tr>
         <td><%= chat.user.id %></td>
         <td><%= chat.user.last_name + chat.user.first_name %></td>
         <td><%= link_to "DM", admin_room_path(chat.room_id) %></td>
       </tr>
      <% end %>
      </tbody>
     </table>
    <% else %>
     <p>チャットがありません。</p>
    <% end %>
   </div>
  </div>
</div>