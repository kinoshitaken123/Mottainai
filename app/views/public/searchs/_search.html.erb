<% if user_signed_in? %>
  <div class="search_form">
    <%= form_with url: public_searchs_search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word, placeholder: "ジャンル・商品検索" %>
      <%= f.select :range, options_for_select([['Genre'], ['Product']]) %>
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backword_match"], ["部分一致","partial_match"]]) %>
      <%= f.submit "検索", class: "btn btn-primary" %>
      <i class="fas fa-search" ></i>
    <% end %>
  </div>
<% end %>