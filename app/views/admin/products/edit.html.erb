<div class="container">
  <div class="row">
    <div class="mx-auto col-md-6">
      <h1 class="mb-5">商品編集</h1>
        <%= form_with model: @product, url: admin_product_path(@product), local:true do |f| %>
      <div class="form-group row">
        <%= f.label :image_id, "商品画像", class: "col-sm-5 control-label" %>
        <%= f.attachment_field :image, class: 'col-sm-7' %>
      </div>
      <div class="form-group row">
        <%= f.label :name, "商品名", class: "col-sm-5 control-label" %>
        <%= f.text_field :name, class: 'col-sm-7 form-control product_name', placeholder: "商品名" %>
      </div>
      <div class="form-group row">
        <%= f.label :descroption, "商品説明", class: "col-sm-5 control-label" %>
        <%= f.text_area :description, class: 'col-sm-7 form-control product_description', placeholder: "ここに説明文を記述します" %>
      </div>
      <div class="form-group row">
        <%= f.label :genre_id, "ジャンル", class: "col-sm-5 control-label" %>
        <%= f.collection_select :genre_id, @genres, :id, :name, prompt: "選択して下さい" %>
      </div>
      <div class="form-group row">
        <%= f.label :price, "税抜価格", class: "col-sm-5 control-label" %>
        <%= f.text_field :price, class: 'col-sm-6 form-control product_price', placeholder: "1,000" %>
        <p class="col-sm-1">円</p>
      </div>
      <div class="form-group row">
        <%= f.label :status, "販売ステータス", class: "col-sm-5 control-label" %>
        <%= f.radio_button :status, :true %>販売中<%= f.radio_button :status, :false %>販売停止中
      </div>
      <div class="form-group row">
        <%= f.submit "変更を保存", class: 'btn btn-success' %>
      </div>
        <% end %>
    </div>
  </div>
</div>